@model Articles.Models.AdminPageModel
<link rel="stylesheet" type="text/css" href="~/Content/taggle.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/twilight.css">
<link rel="stylesheet" type="text/css" href="~/Content/projects.min.css">
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h3>You can add new item to the database.</h3>

@Html.ValidationSummary()

@using (Html.BeginForm("AddItem", "Admin", FormMethod.Post))
{
    @Html.LabelFor(m => m.NewItem.Number)
    @Html.TextBoxFor(m => m.NewItem.Number, new { @class = "form-control" })

    @Html.LabelFor(m => m.NewItem.Name)
    @Html.TextBoxFor(m => m.NewItem.Name, new { @class = "form-control" })

    @Html.LabelFor(m => m.NewItem.Price)
    @Html.TextBoxFor(m => m.NewItem.Price, new { @class = "form-control" })
    
    @Html.LabelFor(m => m.NewItem.Description)
    @Html.TextAreaFor(m => m.NewItem.Description, new { @class = "form-control" })

    <label>Enter categories:</label>
    <div class="form-control a-control mB12" id="addCategories"></div>

    <input class="btn-success btn" type="submit" value="Add">
}

@section scripts{
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/taggle.js"></script>
    <script src="~/Scripts/App/Admin.js"></script>
}
